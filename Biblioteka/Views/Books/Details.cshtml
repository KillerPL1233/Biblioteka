@model Biblioteka.Models.Book

@{
    ViewData["Title"] = "Szczegóły książki";
    Layout = "_Layout";
}

<h1>@Model.Title</h1>

<div class="book-card">
    <h2>@Model.Author</h2>

    <p><strong>Kategoria:</strong> @Model.Category?.Name</p>
    <p><strong>ISBN:</strong> @Model.ISBN</p>
    <p><strong>Na stanie:</strong> @Model.Stock</p>

    <h3>Opis</h3>
    <p>@Model.Description</p>

    @if (!string.IsNullOrWhiteSpace(Model.TableOfContents))
    {
        <h3>Spis treści</h3>
        <p>@Model.TableOfContents</p>
    }

    @if (Model.BookTags?.Any() == true)
    {
        <h3>Tagi</h3>
        <ul>
            @foreach (var tag in Model.BookTags)
            {
                <li>@tag.Tag.Name</li>
            }
        </ul>
    }

    @if (Model.Files?.Any() == true)
    {
        <h3>Pliki</h3>
        <ul>
            @foreach (var file in Model.Files)
            {
                <li>
                    <a href="@file.Url" target="_blank">@file.FileName</a>
                    - @file.Description
                </li>
            }
        </ul>
    }
</div>

<a asp-controller="Books" asp-action="Index" class="btn btn-primary">Powrót do listy</a>
